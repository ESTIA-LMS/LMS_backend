pipeline {
    agent any

    stages {
        stage('Chekout') {
            steps {
                git url: 'https://github.com/ESTIA-LMS/LMS_backend.git', branch: 'main'
                echo 'Checkout Completed'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh '/usr/local/bin/docker-compose up'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}