pipeline {

    agent {
        docker {
            image 'back_api:latest'
            args '-p 3000:3000'
        }
    }

    stages {
        stage('Chekout') {
            steps {
                git url: 'https://github.com/ESTIA-LMS/LMS_backend.git', branch: 'main'
                echo 'Checkout Completed'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}